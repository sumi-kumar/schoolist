<p id="notice"><%= notice %></p>

<h1>Listing Schools</h1>

<%= form_tag schools_path, :method => 'get' do %>
<p>
   <%= text_field_tag :search, params[:search] %>
   <%= submit_tag "search" %>
 </p> 
  <% end %>
<%= render :partial => 'show', :locals => {:school => @first_school} %>


<br/>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rest_schools.each do |school| %>
      <tr>
        <td><%= school.name %></td>
        <td><%= school.city %></td>
        <td><%= school.zip %></td>
        <td><%= link_to 'Show', school %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New School', new_school_path %>
